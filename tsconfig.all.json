{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "declaration": false,
    "experimentalDecorators": true,
    "outDir": "./bin",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
